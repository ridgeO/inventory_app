<%= provide(:title, "Edit Item") %>
<div class="container">
  <h1><%= "Edit: #{@item.name}"%></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for([@location, @item]) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= render 'items/fields', f: f %>
        <br>
        <%= f.submit "Save Edits", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
