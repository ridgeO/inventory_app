<%= provide(:title, "New Item")%>
<div class="container">
  <h1>Add Item to Inventory</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for([@location, @item], html: { multipart: true }) do |f| %>
        <%= render "shared/error_messages" %>
        <%= render "items/fields", f: f %>
        <%= f.hidden_field :location_id, :value => @location.id %>
        <br>
        <%= f.submit "Add Item to Tracker", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
