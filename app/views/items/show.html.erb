<%= provide(:title, "#{@item.name}") %>
<div class="container">
  <div>
    <h1><%= @item.name %></h1>
    <% if current_user.admin? %>
      <%= render "items/editdeletelinks" %>
    <% end %>
  </div>
  <div class="panel-body">
    <%= render "items/descriptionbody" %>
  </div>
  <div>
    <%= render "items/calendar" %>
    <%= render "items/historytable" %>
    <%= link_to "Back to Inventory", location_path(@location.id) %>
  </div>
</div>
