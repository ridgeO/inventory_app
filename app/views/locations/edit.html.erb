<%= provide(:title, "Edit Location") %>
<div class="container">
  <h1><%= "Edit: #{@location.name}"%></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@location) do |f| %>
        <%= render 'shared/location_error_messages' %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        <br>
        <%= f.submit "Save Edits", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
