<%= provide(:title, "New Location")%>
<div class="container">
  <h1>Add Location</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@location) do |f| %>
        <%= render "shared/location_error_messages" %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        <br>
        <%= f.submit "Add Location to Tracker", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
