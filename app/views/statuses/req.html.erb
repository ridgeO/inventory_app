<%= provide(:title, "Request Item") %>
<div class="container">
  <h1><%= "Request: #{@item.name}"%></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for([@location, @item, @status]) do |f| %>
        <%= render "shared/status_error_messages" %>
        <%= f.label "Your Email Address" %>
        <%= f.text_field :holder, class: 'form-control' %>
        <%= f.label "Request Date" %>
        <%= f.date_field :start_time, :value => @start_time, class: 'form-control' %>
        <%= f.label :due %>
        <%= f.date_field :due, class: 'form-control' %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.hidden_field :name, :value => "Req" %>
        <br>
        <%= f.submit "Save Edits", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
